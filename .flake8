[flake8]
max-line-length = 88
exclude = 
    .git,
    .github/
    nginx/,
    static/,
    __pycache__,
    build,
    dist,
    .editorconfig,
    .env*,
    .gitignore,
    *.yml,
    *.md,
    *.toml,
    LICENSE
ignore = 
    E203,  
    W503  
# Enable specific plugins
enable-extensions = G
max-complexity = 10
select = B,C,E,F,W,T4,B9
format = pylint
statistics = True